{
    "$schema": "http://uao.edu.co/cpslab/project/platea/interaction_schema#",
    "type": "object",
    "title": "Root schema.",
    "description": "Root JSON object.",
    "properties": {
        "interaction": {
            "type": "object",
            "title": "Interaction schema.",
            "description": "Represent a video interaction.",
            "properties": {
                "id": {
                    "type": "string",
                    "title": "ID schema.",
                    "description": "Interaction ID. Unique in the video",
                    "default": "000000000",
                    "pattern": "^[1-9][0-9]*$",
                    "id": "id"
                },
                "type": {
                    "type": "object",
                    "title": "Type schema.",
                    "description": "Define the interaction type.",
                    "properties": {
                        "event": {
                            "type": "string",
                            "title": "Event schema.",
                            "description": "Explicit interaction type.",
                            "default": "HOT_SPOT",
                            "enum": [
                                "HOT_SPOT",
                                "WEB_CONTENT",
                                "INDEX",
                                "SENSE",
                                "SOCIAL"
                              ],
                            "id": "event"
                        },
                        "data": {
                            "type": "object",
                            "title": "Data schema.",
                            "description": "Represent the specific interaction data.",
                            "properties": {
                                ...
                            },
                            "id": "data"
                        }
                    },
                    "id": "type",
                    "required": [
            "event",
            "data"
          ]
                },
                "start_time": {
                    "type": "integer",
                    "title": "Show_time schema.",
                    "description": "Time in seconds for init the interaction.",
                    "default": 0,
                    "id": "start_time",
                    "anyOf": [{
                        "minimum": 0
                    }, {
                        "type": "integer"
                    }, {
                        "enum": ["VIDEO_START", "VIDEO_END", "VIDEO_PASED"]
                    }]
                },
                "duration": {
                    "type": "integer",
                    "title": "Duration schema.",
                    "description": "Duration in seconds for the interaction.",
                    "default": 1,
                    "id": "duration"
                    "anyOf": [{
                        "minimum": 1
                    }, {
                        "type": "integer"
                    }, {
                        "enum": ["VIDEO_END"]
                    }]
                },
                "isPaused": {
                    "type": "boolean",
                    "title": "IsPaused schema.",
                    "description": "Is the video is paused when the interaction start.",
                    "default": true,
                    "enum": [
            false,
            true
          ],
                    "id": "isPaused"
                }
            },
            "id": "interaction",
            "required": [
        "id",
        "type",
        "start_time",
        "duration"
      ]
        }
    },
    "id": "/",
    "required": [
    "interaction"
  ]
}

