"data": {
    "type": "object",
    "title": "Data schema.",
    "description": "Represent the specific interaction data.",
    "properties": {
        "shift": {
            "type": "array",
            "title": "Shift schema.",
            "description": "clickable object array.",
            "items": {
                "type": "object",
                "title": "0 schema.",
                "description": "An explanation about the purpose of this instance.",
                "properties": {
                    "geometry": {
                        "type": "string",
                        "title": "Geometry schema.",
                        "description": "An explanation about the purpose of this instance.",
                        "default": "ARC",
                        "enum": [
                             "ARC",
                             "RECT",
                             "TRIANGLE",
                             "POLYGON"
                        ],
                        "id": "geometry"
                    },
                    "radius": {
                        "type": "integer",
                        "title": "Radius schema.",
                        "description": "An explanation about the purpose of this instance.",
                        "default": 10,
                        "enum": [
                          null,
                          10
                        ],
                        "id": "radius"
                    },
                    "width": {
                        "type": "integer",
                        "title": "Width schema.",
                        "description": "An explanation about the purpose of this instance.",
                        "default": 10,
                        "id": "width"
                    },
                    "high": {
                        "type": "integer",
                        "title": "High schema.",
                        "description": "An explanation about the purpose of this instance.",
                        "default": 10,
                        "id": "high"
                    }
                },
                "id": "0",
            },
            "id": "shift"
        },
        "motion": {
            "type": "array",
            "title": "Motion schema.",
            "description": "An explanation about the purpose of this instance.",
            "items": {
                "type": "object",
                "title": "0 schema.",
                "description": "An explanation about the purpose of this instance.",
                "properties": {
                    "position": {
                        "type": "object",
                        "title": "Position schema.",
                        "description": "An explanation about the purpose of this instance.",
                        "properties": {
                            "x": {
                                "type": "integer",
                                "title": "X schema.",
                                "description": "An explanation about the purpose of this instance.",
                                "default": 1,
                                "enum": [
                              null,
                              1
                            ],
                                "id": "x"
                            },
                            "y": {
                                "type": "integer",
                                "title": "Y schema.",
                                "description": "An explanation about the purpose of this instance.",
                                "default": 2,
                                "enum": [
                              null,
                              2
                            ],
                                "id": "y"
                            }
                        },
                        "id": "position",
                        "required": [
                          "x",
                          "y"
                        ]
                    },
                    "start_time": {
                        "type": "integer",
                        "title": "Show_time schema.",
                        "description": "An explanation about the purpose of this instance.",
                        "default": 0,
                        "id": "start_time"
                    },
                    "duration": {
                        "type": "integer",
                        "title": "Duration schema.",
                        "description": "An explanation about the purpose of this instance.",
                        "default": 0,
                        "id": "duration"
                    }
                },
                "id": "0",
                "required": [
                      "position",
                      "start_time",
                      "duration"
                    ]
            },
            "id": "motion"
        }
    },
    "id": "data",
    "required": [
                "shift",
                "motion"
              ]